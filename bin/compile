#!/usr/bin/env bash
echo "-----> Building React app..."

cd $1/frontend

echo "-----> Installing packages..."
npm install
if test $? -ne 0; then
    echo "-----> Error installing packages..."
    exit 1
fi

echo "-----> Building production files..."
npm run build
if test $? -ne 0; then
    echo "-----> Error building production files app..."
    exit 1
fi

echo "-----> React app build completed."
